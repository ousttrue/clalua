{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lrdb",
            "request": "attach",
            "name": "attach",
            "host": "localhost",
            "port": 21110,
            "sourceRoot": "${workspaceFolder}",
            "stopOnEntry": false,
            // "preLaunchTask": "launch"
        },
        {
            "name": "cs_windowskits",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/lua.exe",
            "args": [
                "scripts/cs_windowskits.lua",
                "${workspaceFolder}/generated",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};C:/Program Files/LLVM/bin"
                },
                {
                    "name": "LUA_PATH",
                    "value": "${workspaceFolder}\\scripts\\?.lua"
                },
                {
                    "name": "LUA_CPATH",
                    "value": "${workspaceFolder}\\build\\Debug\\bin\\?.dll"
                }
            ],
            "externalConsole": false
        }
    ]
}