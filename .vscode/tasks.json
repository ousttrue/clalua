{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "launch",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/bin/lua.exe",
            "args": [
                "scripts/cs_windowskits.lua",
                "${workspaceFolder}/generated"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${env:PATH};C:/Program Files/LLVM/bin",
                    "LUA_PATH": "${workspaceFolder}\\scripts\\?.lua",
                    "LUA_CPATH": "${workspaceFolder}\\build\\Debug\\bin\\?.dll"
                }
            },
            "problemMatcher": []
        }
    ]
}